{
    "name": "pablosanches/php-pds",
    "description": "Standard PHP package skeleton",
    "type": "standard",
    "license": "MIT",
    "authors": [
        {
            "name": "Pablo Sanches",
            "email": "sanches.webmaster@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "PabloSanches\\PHPPDS\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PabloSanches\\PHPPDS\\Tests\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "squizlabs/php_codesniffer": "^3.6",
        "mockery/mockery": "^1.3"
    },
    "scripts": {
        "test": "phpunit --coverage-html tests/_reports",
        "cs": "phpcs src/ tests/ --standard=PSR12",
        "csf": "phpcbf src/ tests/ --standard=PSR12",
        "deploy": [
            "@cs",
            "@test"
        ],
        "post-update-cmd": [
            "@deploy"
        ]
    }
}
